n=int(input("Enter how many items you want to add to the list:"))
list1=[]
for i in range(n):
    item=int(input("Enter the item to add:"))
    list1.append(item)
print(list1)
even_count, odd_count = 0, 0
for num in list1: 
    if num % 2 == 0: 
        even_count += 1
    else: 
        odd_count += 1
      
print("Even numbers in the list: ", even_count) 
print("Odd numbers in the list: ", odd_count)